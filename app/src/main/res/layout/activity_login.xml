<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="app.clau.restaurantreservations.activities.LoginActivity"
    >

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/please_login"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etUsernameXmlId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/eddittext_top_curv_gray"
        android:ems="12"
        android:gravity="fill_vertical|center_horizontal"
        android:hint="@string/username"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/textSizeLogin"
        />

    <EditText
        android:id="@+id/etPasswordXmlId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edditext_bottom_curv_gray"
        android:ems="12"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="8"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/textSizeLogin"
        />

    <Button
        android:id="@+id/btLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/login_text_button"
        android:ems="12"
        android:textAllCaps="false"
        android:textSize="@dimen/textSizeLogin"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"/>

</LinearLayout>
